@page "/EmployeeEdit/{Id}"
@page "/EmployeeEdit"

@inherits EmployeeEditBase

<EditForm Model="@EmployeeEditModel" OnInvalidSubmit="HandleValidSubmit">
    @*<DataAnnotationsValidator />*@
    <ObjectGraphDataAnnotationsValidator />

    <ValidationSummary />

    <h3>@PageHeader</h3>

    @*firstname*@
    <div class="form-group row">
        <label for="firstname" class="col-sm-2 col-form-label">First Name:</label>

        <InputText id="firstname" class="form-control" placeholder="First Name"
                   @bind-Value="EmployeeEditModel.FirstName" />
        <ValidationMessage For="@(()=>EmployeeEditModel.FirstName)" />
    </div>

    @*LastName*@
    <div class="form-group row">
        <label for="lastname" class="col-sm-2 col-form-label">Last Name:</label>

        <InputText id="lastname" class="form-control" placeholder="First Name"
                   @bind-Value="EmployeeEditModel.LastName" />
        <ValidationMessage For="@(()=>EmployeeEditModel.LastName)" />
    </div>


    @*Email*@
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email:</label>

        <InputText id="email" class="form-control" placeholder="First Name"
                   @bind-Value="EmployeeEditModel.Email" />
        <ValidationMessage For="@(()=>EmployeeEditModel.Email)" />
    </div>

    <div class="form-group row">
        <label for="confirmEmail" class="col-sm-2 col-form-label">
            Confirm Email
        </label>
        <div class="col-sm-10">
            <InputText id="confirmEmail" class="form-control"
                       @bind-Value="EmployeeEditModel.ConfirmEmail" />
            <ValidationMessage For="@(() => EmployeeEditModel.ConfirmEmail)" />
        </div>
    </div>


    @*Department selection*@
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <CustomInputSelect id="department" @bind-Value="EmployeeEditModel.DepartmentId" class="form-control">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                }
            </CustomInputSelect>

            @*<InputText id="deptname" class="form-control"
                           @bind-Value="EmployeeEditModel.Department.DepartmentName" />
                <ValidationMessage For="@(()=>EmployeeEditModel.Department.DepartmentName)" />*@

        </div>
    </div>


    @*Enum Selection selection*@
    <div class="form-group row">
        <label for="gender" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" @bind-Value="EmployeeEditModel.Gender" class="form-control">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>

    @*Date of birth*@
    <div class="form-group row">
        <label for="dateofbirth" class="col-sm-2 col-form-label">
            Date of Birth
        </label>
        <div class="col-sm-10">
            <InputDate id="dateofbirth" @bind-Value="EmployeeEditModel.DateOfBrith" />
        </div>
    </div>





    <button type="submit" class="btn btn-primary" @onclick="HandleValidSubmit">Submit</button>

    @if (EmployeeEditModel.EmployeeId > 0)
    {
        <button class="btn btn-danger" type="button" @onclick="Delete_Click">
            Delete
        </button>
    }



</EditForm>
